
<div class="form_advance_activity_post">
  <%= simple_form_for activity_post do |f| %>
    <%= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker"}  %>
    <%= f.input :category_id, as: :hidden%>
    <%= f.input :title, as: :hidden %>
    <%= f.input :duration, placeholder: 'Type in minutes the length of the activity', as: :hidden %>
    <%= f.input :description, as: :text, placeholder: 'Add the information of the activity..', as: :hidden %>
    <%= f.input :capacity, as: :hidden %>
    <%= f.submit "Quick Create"%>
  <% end %>
</div>
