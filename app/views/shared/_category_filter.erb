 <% @categories.first(3).each do |category| %>
  <%= link_to date_activities_path(date: @date ,category_id: category) do  %>
  <div class="dashboard-category-container" style="background-image: linear-gradient(45deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.5)), url(<%= image_path(category.url) %>)">
    <h4><%= category.name %></h4>
    </div>
  <% end %>
<% end %>
