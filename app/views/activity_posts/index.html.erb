<%= render 'shared/date-switcher' %>

<div class="container dashboard-container">
  <div class="row">
    <div class="col-8">
      <div class="dashboard-header">
      <h2>Schedule</h2>
      </div>
      <div class="d-flex justify-content-between">
        <% @categories.first(3).each do |category| %>
        <div class="dashboard-category-container" style="background-image: url(<%= image_path(category.url) %>)">
          <h4><%= category.name %></h4>
          </div>
        <% end %>
        <div>
        <div class="dashboard-category-new">
          <h4>New Category</h4>
        </div>
        <div class="dashboard-category-new">
          <h4>New Event</h4>
        </div>
        </div>
      </div>
      <div class="dashboard-activities-container">

      </div>
    </div>
    <div class="col-4">
      <h2>Next up!</h2>
      <div class="dashboard-next-up-container">

      </div>

    </div>
  </div>
</div>
