<div class="container dashboard-container-my-hosting">
      <div class="dashboard-header-my-hosting">
        <h2>Today</h2>
      </div>
      <div class="dashboard-my-hosting-container">
          <%= render 'shared/my_hostings_today' %>
      </div>
      <div class="dashboard-header-my-hosting">
        <h2>Future Events</h2>
      </div>
      <div class="dashboard-my-hosting-container">
          <%= render 'shared/my_hostings_future' %>
      </div>
      <div class="dashboard-activities-arrow-box">
        <% if @my_joined_activities.count > 2 %>
          <h2><i class="fas fa-angle-double-down"></i></h2>
        <% end %>
      </div>
</div>
