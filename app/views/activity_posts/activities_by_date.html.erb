<%= render 'shared/date-switcher' %>
<div class="container dashboard-container">
  <div class="row">
    <div class="col-8">
      <div class="dashboard-header">
      <h2>Schedule</h2>
      </div>
      <div class="d-flex justify-content-between">
        <%= render 'shared/category_filter' %>
      </div>
      <div class="dashboard-activities-container">
        <%= render 'shared/list_activities' %>
      </div>
      <div class="dashboard-activities-arrow-box">
        <% if @activity_posts.count > 4 %>
          <h2><i class="fas fa-angle-double-down"></i></h2>
        <% end %>
      </div>
    </div>
    <div class="col-4">
      <h2 class="text-center">Hot events!</h2>
      <div class="dashboard-next-up-container">
        <%= render 'shared/next-up-card' %>
      </div>
      <%= render 'shared/new_create_at_dashboard' %>
    </div>
  </div>
</div>

